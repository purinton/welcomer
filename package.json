{
    "name": "@purinton/welcomer",
    "type": "module",
    "version": "1.0.3",
    "description": "A minimal Discord bot that replies to every message in a specific channel with a \ud83d\udc4b emoji.",
    "main": "welcomer.mjs",
    "scripts": {
        "start": "node welcomer.mjs",
        "test": "npx --node-options=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles --silent"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/purinton/welcomer.git"
    },
    "keywords": [
        "discord",
        "bot",
        "emoji",
        "welcome",
        "minimal",
        "nodejs"
    ],
    "author": "Russell Purinton <russell@purinton.us>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/purinton/welcomer/issues"
    },
    "homepage": "https://github.com/purinton/welcomer#readme",
    "devDependencies": {
        "jest": "^30.0.4"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/?(*.)+(spec|test).mjs",
            "**/?(*.)+(spec|test).cjs"
        ]
    },
    "dependencies": {
        "@purinton/common": "^1.0.17",
        "@purinton/discord": "^1.0.14",
        "dotenv": "^17.2.0"
    }
}